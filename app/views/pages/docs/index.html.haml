%head
  %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js"}
  :css
    .layer1 {
    margin: 0;
    padding: 0;
    }
    .heading {
    margin: 1px;
    padding: 3px 10px;
    cursor: pointer;
    position: relative;
    }
    .content {
    padding: 5px 10px;
    background-color:#fafafa;
    }
    pre { background: #111122; padding: 10px; color: #228822; }
%h2
  Documents
%body
  .layer1
    %p.heading Draw Poker
    .content= render :partial => "pages/docs/draw_poker" 
    %p.heading Player Actions
    .content= render :partial => "pages/docs/player_actions" 
    %p.heading Tournament Seating
    .content= render :partial => "pages/docs/tournament_seating" 
    %p.heading Ante Progression
    .content= render :partial => "pages/docs/ante_progression" 
  :javascript
    jQuery(document).ready(function() {
      jQuery(".content").hide();
      //toggle the componenet with class msg_body
      jQuery(".heading").click(function()
      {
        jQuery(this).next(".content").slideToggle(500);
      });
    });
