#poker_tables
  - tables.each do |data|
    .poker_table
      %h3 
        .pull-left
          Table #{data[:table_id]}
        .pull-right
          != stack_display(data[:pot])
          #{data[:pot]}
        .clearfix
      %ul.players
        - data[:players].each_with_index do |player, i|
          %li{:class => ("bottom" if (i/3).truncate % 2 == 1)}
            - if (i/3).truncate % 2 != 1
              %span.name= player[:name].first(12)
              %span.stack
                != stack_display(player[:stack], false)
                = player[:stack]
            - else
              %span.stack
                != stack_display(player[:stack], false)
                = player[:stack]
              %span.name= player[:name].first(12)
      .clearfix{:style => "margin-bottom: 10px;"}
      .last_winner
        - data[:latest_winners].each do |winner|
          %span #{winner[:name]} won #{winner[:winnings]}
          .pull-right
            %span 
  .clearfix
