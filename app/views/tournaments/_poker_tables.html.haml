#poker_tables
  - tables.each do |data|
    .poker_table
      %h3 Table #{data[:table_id]}
      %ul.players
        - data[:players].each_with_index do |player, i|
          %li{:class => ("bottom" if (i/3).truncate % 2 == 1)}
            - if (i/3).truncate % 2 != 1
              %span.name= player[:name].slice(0,15)
              %span.stack
                != stack_display(player[:stack])
                = player[:stack]
            - else
              %span.stack
                != stack_display(player[:stack])
                = player[:stack]
              %span.name= player[:name]
      .clearfix
      %h3.last_winner
        %i.icon.icon-white.icon-exclamation-sign
        - data[:latest_winners].each do |winner|
          #{winner[:name]} won #{winner[:winnings]}
  .clearfix
